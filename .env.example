# OVH Checker Production Configuration
# Copy this file to .env and customize for your deployment

# Database
POSTGRES_USER=ovhchecker
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_DB=ovhchecker

# JWT Authentication - MUST BE CHANGED IN PRODUCTION
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_A_RANDOM_SECRET

# Token expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Registration
# Set to "false" to disable public registration (admin can still create users)
ALLOW_REGISTRATION=true

# CORS - restrict to your domain in production
CORS_ORIGINS=https://your-domain.com

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Checker Configuration
CHECK_INTERVAL_SECONDS=120
NOTIFICATION_THRESHOLD_MINUTES=60
