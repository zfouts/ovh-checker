apiVersion: v1
kind: Secret
metadata:
  name: postgres-secret
  namespace: ovh-checker
type: Opaque
stringData:
  # Change these values for production!
  POSTGRES_USER: ovhchecker
  POSTGRES_PASSWORD: CHANGE_ME_SECURE_PASSWORD
  POSTGRES_DB: ovhchecker
  DATABASE_URL: postgresql://ovhchecker:CHANGE_ME_SECURE_PASSWORD@postgres:5432/ovhchecker
  
  # Generate with: openssl rand -base64 32
  JWT_SECRET: CHANGE_ME_GENERATE_WITH_OPENSSL
  
  # Optional: Default Discord webhook for all notifications
  # DISCORD_WEBHOOK_URL: https://discord.com/api/webhooks/...
