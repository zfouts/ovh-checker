# ⚠️  SECURITY WARNING: This is an example file only!
# Copy to secrets.yaml and change ALL values before deploying.
# NEVER commit secrets.yaml to version control!
#
# To generate a secure JWT_SECRET:
#   openssl rand -base64 32
#
# To generate a secure database password:
#   openssl rand -base64 24
apiVersion: v1
kind: Secret
metadata:
  name: postgres-secret
  namespace: ovh-checker
type: Opaque
stringData:
  # ⚠️  CHANGE THESE VALUES FOR PRODUCTION!
  POSTGRES_USER: ovhchecker
  POSTGRES_PASSWORD: CHANGE_ME_SECURE_PASSWORD
  POSTGRES_DB: ovhchecker
  DATABASE_URL: postgresql://ovhchecker:CHANGE_ME_SECURE_PASSWORD@postgres:5432/ovhchecker
  
  # ⚠️  REQUIRED: Generate with: openssl rand -base64 32
  JWT_SECRET: CHANGE_ME_GENERATE_WITH_OPENSSL
  
  # Optional: Default Discord webhook for all notifications
  # DISCORD_WEBHOOK_URL: https://discord.com/api/webhooks/...
